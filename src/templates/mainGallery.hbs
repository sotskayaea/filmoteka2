{{#each results}}
    <li class="gallery__item" id={{id}} data-img={{poster_path}}>
        {{#if poster_path}}
        <img loading="lazy" class="gallery__img modal img" src=https://www.themoviedb.org/t/p/w500{{poster_path}} alt="{{title}}" />
        {{else}}
        <div class="gallery__img-error modal img">Sorry... We don't have poster for this movie &#9785;</div>
        {{/if}}
        <div class="gallery__description modal" id={{id}} data-img={{poster_path}}>
            {{#if title}}
            <p class="gallery__title modal">{{title}}</p>
            {{else if name}}
            <p class="gallery__title modal">{{title}}</p>
            {{/if}}
            <div  class='gallery__description-text modal'>
                <div class="gallery__description-item gallery__description-list ">&nbsp;{{#if new_genres}}{{new_genres}}{{else if first_air_date}}{{first_air_date}}{{else}}<span>N/a</span>{{/if}}&nbsp;|</div>
                <div class="gallery__description-date">&nbsp;{{#if release_date}}{{release_date}}{{else if first_air_date}}{{first_air_date}}{{else}}<span>N/a</span>{{/if}}</div>
            </div>
        </div>
    </li>
{{/each}}